<Window
    Height="450"
    Loaded="MainWindow_OnLoaded"
    Title="MainWindow"
    Width="800"
    mc:Ignorable="d"
    ui:WindowHelper.UseModernWindowStyle="True"
    x:Class="Kraken.Desktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Kraken.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ui:NavigationView
        IsBackButtonVisible="Collapsed"
        IsBackEnabled="False"
        IsSettingsVisible="False"
        IsTabStop="False"
        PaneDisplayMode="Top"
        SelectionChanged="RootNavigationView_OnSelectionChanged"
        x:Name="RootNavigationView">
        <ui:NavigationView.MenuItems>
            <ui:NavigationViewItem Content="Cooling" Tag="Kraken.Desktop.Views.CoolingPage" />
            <ui:NavigationViewItem Content="Lighting" Tag="Kraken.Desktop.Views.LightingPage" />
        </ui:NavigationView.MenuItems>
        <ui:Frame x:Name="RootFrame" />
    </ui:NavigationView>
</Window>